{
  "compilerOptions": {
    "target": "ES2018",
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "noEmit": true,
    "outDir": "dist",
    "declaration": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "*": [
        "types/*"
      ],
      "chat-stdlib": [
        "../chat-stdlib/dist/chat-stdlib-beta.d.ts"
      ]
    },
  },
  "include": [
    "src",
    "tests",
    "types",
    "eslint.config.js",
    "jest.config.js"
  ],
}